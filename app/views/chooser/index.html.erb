<section class="chosen-item-callout">

  <h1 class="chosen-item-callout__heading">Choose the scrolling mode</h1>

  <script type="text/javascript">
  $(function() {
    $(".choose_button").click(function(ev) {
      console.log(ev);
      document.cookie = "mode=" + $(ev.target).data('cid');
      window.location = '<%= client_path(@client.name) %>';
    });
  });
  </script>
  
  <form>
    <button type="button" class="choose_button" data-cid="default">Original</button>
    <button type="button" class="choose_button" data-cid="slide">Swipe</button>
	<button type="button" class="choose_button" data-cid="carousel">Carousel</button>
  </form>

</section>
